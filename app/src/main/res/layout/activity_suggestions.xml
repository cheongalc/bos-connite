<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_SuggestionsActivityContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SuggestionsActivity"
    android:orientation="vertical">

    <com.connite.NonSwipeableViewPager
        android:id="@+id/nsvp_SuggestionsViewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9"
        android:layout_marginTop="40dp"
        android:layout_marginStart="@dimen/cardViewDoubleMargin"
        android:layout_marginEnd="@dimen/cardViewDoubleMargin"/>

    <RelativeLayout
        android:id="@+id/rl_SuggestionsActivityCloseContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1">

        <LinearLayout
            android:id="@+id/ll_SuggestionsActivityCloseHorizontalContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerInParent="true">

            <ImageView
                android:id="@+id/iv_SuggestionsActivityCloseIcon"
                android:layout_width="64dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_keyboard_arrow_down_gray_24dp"/>

            <TextView
                android:id="@+id/tv_SuggestionsActivityCloseText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Close"
                android:textStyle="bold"
                android:textSize="30sp"
                android:textColor="@color/colorDarkGray"
                android:layout_gravity="center_vertical" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>