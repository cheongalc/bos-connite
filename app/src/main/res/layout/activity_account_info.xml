<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_UserInfoActivityContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="closeUserInfoActivity">

    <RelativeLayout
        android:id="@+id/rl_UserInfoHeaderContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/cardViewDefaultMargin"
        android:layout_marginTop="@dimen/cardViewDefaultMargin"
        android:layout_marginRight="@dimen/cardViewDefaultMargin"
        android:elevation="@dimen/cardViewElevation"
        android:outlineProvider="none">

        <android.support.v7.widget.CardView
            android:id="@+id/cv_UserInfoHeaderCard"
            android:layout_width="match_parent"
            android:layout_height="@dimen/userHeaderHeight"
            android:onClick="closeUserInfoActivity"
            app:cardCornerRadius="@dimen/cardViewCornerRadius"
            app:cardElevation="0dp">

            <LinearLayout
                android:id="@+id/ll_UserInfoHeaderContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@mipmap/ic_user_header_background"
                android:padding="@dimen/cardViewDefaultPadding">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/civ_UserInfoProfileImage"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/cardViewDefaultPadding"
                    android:src="@mipmap/avatar"
                    app:civ_border_color="@color/colorWhite"
                    app:civ_border_width="2dp" />

                <RelativeLayout
                    android:id="@+id/rl_UserHeaderTextContainer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/ll_UserHeaderTextInnerContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_UserName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="bottom"
                            android:text="Justin Loh"
                            android:textColor="@color/colorWhite"
                            android:textSize="25sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_UserSub"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="top"
                            android:text="Lorem ipsum dolor sit amet."
                            android:textColor="@color/colorWhite"
                            android:textSize="20sp" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <!--Shadow CardView-->

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/userHeaderHeight"
            android:layout_marginTop="5dp"
            app:cardBackgroundColor="@color/colorShadowGray"
            app:cardCornerRadius="@dimen/cardViewShadowCornerRadius"
            app:cardElevation="-1dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_UserInfoNavbarContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_UserInfoHeaderContainer"
        android:layout_margin="@dimen/cardViewDoubleMargin">

        <android.support.v7.widget.CardView
            android:layout_width="@dimen/userInfoNavbarWidth"
            android:layout_height="@dimen/userInfoNavbarHeight"
            app:cardCornerRadius="@dimen/cardViewCornerRadius"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/colorCyan">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/cardViewDefaultPadding">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginEnd="@dimen/cardViewDefaultPadding"
                        android:src="@drawable/ic_home_white_24dp"
                        android:scaleType="fitCenter"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/colorWhite"
                        android:textStyle="bold"
                        android:textSize="25sp"
                        android:text="Home"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:onClick="startConnectActivity">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginEnd="@dimen/cardViewDefaultPadding"
                        android:src="@drawable/ic_people_white_24dp"
                        android:scaleType="fitCenter"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/colorWhite"
                        android:textStyle="bold"
                        android:textSize="25sp"
                        android:text="Connect"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal"
                    android:onClick="startPastActivitiesActivity">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginEnd="@dimen/cardViewDefaultPadding"
                        android:src="@drawable/ic_access_time_white_24dp"
                        android:scaleType="fitCenter"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/colorWhite"
                        android:textStyle="bold"
                        android:textSize="25sp"
                        android:text="Past"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:layout_marginTop="@dimen/cardViewDefaultPadding"
                    android:background="@color/colorWhite"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_marginTop="@dimen/cardViewDefaultPadding"
                    android:src="@drawable/ic_settings_white_24dp"
                    android:onClick="startSettingsActivity"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="@dimen/userInfoNavbarWidth"
            android:layout_height="@dimen/userInfoNavbarHeight"
            android:layout_marginTop="5dp"
            app:cardElevation="-1dp"
            app:cardBackgroundColor="@color/colorShadowGray"
            app:cardCornerRadius="@dimen/cardViewShadowCornerRadius"/>

    </RelativeLayout>

</RelativeLayout>